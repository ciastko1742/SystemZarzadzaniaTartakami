{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
Produkty
<div class="row">
        {% for product in products %}
            <div class="col-md-4">
            <div class="card">
                <img src="/images/empty.jpg" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ product.getName() }}</h5>
                    <p class="card-text">Rodzaj drzewa: <b>{{ product.getType().getName() }}</b></p>
                    <p class="card-text">Cena za m3: <b>{{ product.getPriceM3() }}</b></p><hr>
                    {% if app.user %}
                        <button type="button" class="btn btn-primary addToCartModal" data-toggle="modal" data-target="#addToCartModal">
                            Dodaj do koszyka
                        </button>
                    {% else %}
                        Zaloguj się aby złożyć zamówienie
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="/product/edit/{{ product.getId() }}">Edytuj</a>
                    <a href="#" id="delete-product" class="btn btn-danger delete-product" data-id="{{ product.getId() }}">Usuń</a>
                    {% endif %}
                </div>
            </div>
            </div>
        {% endfor %}
</div>
</div>

    <div class="modal fade" id="addToCartModal" tabindex="-1" role="dialog" aria-labelledby="addToCartModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addToCartModalLabel">Dodawanie produktu do koszyka</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/cart/add" method="post">
                        <input type="text" name="name">
                        <button type="submit">Test</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                    <button type="button" class="btn btn-primary">Dodaj</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="/js/main2.js"></script>
{% endblock %}
